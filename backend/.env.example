# ===========================================
# Catering Management System - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@db:5432/catering_db?schema=public
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD_HERE
DB_PORT=5432
DB_NAME=catering_db

# ===========================================
# SECURITY (REQUIRED)
# ===========================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=YOUR_STRONG_SECRET_HERE_MINIMUM_32_CHARACTERS

# ===========================================
# SERVER
# ===========================================
NODE_ENV=production
PORT=3012
CORS_ORIGIN=http://localhost:8443

# ===========================================
# NGINX PROXY MANAGER (Optional)
# Uncomment and set these when using NPM
# ===========================================
# CORS_ORIGIN=https://catering.yourdomain.com
# VITE_API_URL=https://catering.yourdomain.com

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://catering-redis:6379

# ===========================================
# BACKUP
# ===========================================
BACKUP_DIR=/app/backups

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@yourcompany.com
